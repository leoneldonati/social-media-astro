---
interface Props {
  page?: string;
  description?: string;
}

const {
  page,
  description
} = Astro.props
---

<html lang="en">
	<head>
		<meta charset="utf-8" />
		<link rel="icon" type="image/svg+xml" href="/favicon.svg" />
		<meta name="viewport" content="width=device-width" />
    <meta name="description" content={description}>
    <!-- SEO -->
     
		<title>Ask! - {page}</title>
	</head>
	<body>
    <slot />
	</body>
</html>

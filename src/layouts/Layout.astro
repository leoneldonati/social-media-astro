---
interface Props {
  page?: string;
  description?: string;
}

const { page, description } = Astro.props;
---

<html lang="en">
  <head>
    <meta charset="utf-8" />
    <link rel="icon" type="image/svg+xml" href="/favicon.svg" />
    <meta name="viewport" content="width=device-width" />
    <meta name="description" content={description} />
    <!-- SEO -->

    <title>Ask! - {page}</title>
  </head>
  <body>
    <slot />
  </body>
</html>

<style is:global>
  /* FONTS */
  @font-face {
    font-family: 'Titles';
    src: url(/fonts/cairo-play-latin-400-normal.ttf);
    font-weight: 400;
  }
  @font-face {
    font-family: 'Primary';
    src: url(/fonts/noto-sans-meetei-mayek-latin-400-normal.ttf);
  }
  /* GLOBAL VARIABLES */
  :root {
    --color_accent: #FFA07A;
    --color_accent_light: #fab093;
    --color_secondary: #C0C0C0;

    --border_size: 0.5em;
    --padding_boxes: 0.8em;

    --titles_font: 'Titles';
    --primary_font: 'Primary';
  }

  /* RESET */
  * {
    margin: 0;
    padding: 0;
  }
  *,
  *::after,
  *::before {
    box-sizing: border-box;
  }
  body {
    min-height: 100dvh;
    font-family: var(--primary_font), system-ui, -apple-system, BlinkMacSystemFont, 'Segoe UI', Roboto, Oxygen, Ubuntu, Cantarell, 'Open Sans', 'Helvetica Neue', sans-serif;
  }
  input,
  button,
  textarea {
    font: inherit;
  }
  p {
    text-wrap: pretty;
  }
  h1,
  h2 {
    text-wrap: balance;
  }
  img,
  svg {
    max-width: 100%;
    height: auto;
  }
  /* reduce animations if user wants */
  @media (prefers-reduced-motion: reduce) {
    *,
    *::before,
    *::after {
      animation-duration: 0.01ms !important;
      animation-iteration-count: 1 !important;
      transition-duration: 0.01ms !important;
      scroll-behavior: auto !important;
      transition: none;
    }
  }
</style>
